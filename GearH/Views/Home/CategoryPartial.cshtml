@model IEnumerable<GearH.Models.Category>

<div class="side-menu animate-dropdown outer-bottom-xs">
    <div class="head"><i class="icon fa fa-align-justify fa-fw"></i>DANH MỤC</div>
    <nav class="yamm megamenu-horizontal">
        <ul class="nav">
            @foreach (var item in Model)
            {
                <li class="dropdown menu-item">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon fa fa-shopping-bag" aria-hidden="true"></i>@item.name</a>
                    <ul class="dropdown-menu mega-menu" style="min-width:200px">
                        <li class="yamm-content">
                            <div class="row">
                                <div class="col-sm-3 col-md-3">
                                    <ul class="links list-unstyled">
                                        @foreach (var brand in ViewBag.brand)
                                        {
                                            if (brand.idCategory == item.idCategory)
                                            {
                                                <li><a href="@Url.Action("ProductFromCategory", "Product", new { idCategory = item.idCategory, idBrand = brand.idBrand })">@brand.name</a></li>
                                            }
                                        }

                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </li>
            }

        </ul>
    </nav>
</div>




